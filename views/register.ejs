<section>
    <div class="hero is-danger is-bold is-fullheight">
        <!-- Hero head: will stick at the top -->
        <div class="hero-head">
            <nav class="navbar is-danger" role="navigation" aria-label="main navigation">
                <div class="container">
                    <div class="navbar-brand">
                        <a class="navbar-item">
                            <h1 class="title">
                                Humanity
                            </h1>
                        </a>

                        <span class="navbar-burger burger" data-target="navbarMenuHeroA">
                            <span></span>
                        <span></span>
                        <span></span>
                        </span>
                    </div>

                    <div id="navbarMenuHeroA" class="navbar-menu">
                        <div class="navbar-end has-text-centered">
                            <a class="navbar-item">
                                Login
                            </a>
                            <a class="navbar-item">
                                About
                            </a>
                            <span class="navbar-item">
                                <a class="button is-danger is-outlined is-inverted is-fullwidth"
                                    href="https://github.com/roeintheglasses/humanity">
                                    <span class="icon">
                                        <i class="fab fa-github"></i>
                                    </span>
                            <span>Star Me</span>
                            </a>
                            </span>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Hero content: will be in the middle -->
        <div class="hero-body">
            <div class="container has-text-centered">
                <!-- Main Page -->

                <div class="columns">
                    <div class="column is-4">
                        <img src="/icons/humanity-guy/humanity-guy.png" width="512" height="512" alt="humanity-guy" />
                    </div>
                    <div class="column is-1"></div>
                    <div class="column">
                        <h1 class="title">
                            Humanity
                        </h1>
                        <h2 class="subtitle">
                            The game
                        </h2>
                        <%- include ( 'partials/messages') %>
                            <form action="/users/register" method="POST" class="box">

                                <div class="columns">
                                    <div class="column is-half">
                                        <div class="field">
                                            <label for="name" class="label">Username</label>
                                            <div class="control has-icons-left has-icons-right">
                                                <input id="name" name="name" class="input" type="name" placeholder="enter your username" value="<%= typeof name != 'undefined' ? name : '' %>" required />
                                                <span class="icon is-small is-left">
                                                <i class="fas fa-user"></i>
                                            </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="column is-half">
                                        <div class="field">
                                            <label for="email" class="label">Email</label>
                                            <div class="control has-icons-left">
                                                <input id="email" name="email" type="email" placeholder="enter your email" class="input" value="<%= typeof email != 'undefined' ? email : '' %>" required />
                                                <span class="icon is-small is-left">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="columns">
                                    <div class="column is-half">
                                        <div class="field">
                                            <label for="password" class="label">Password</label>
                                            <div class="control has-icons-left">
                                                <input id="password" name="password" type="password" placeholder="*******" class="input" value="<%= typeof password != 'undefined' ? password : '' %>" required />
                                                <span class="icon is-small is-left">
                                                <i class="fa fa-lock"></i>
                                            </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="column is-half">
                                        <div class="field">
                                            <label for="password2" class="label">Confirm Password</label>
                                            <div class="control has-icons-left">
                                                <input id="password2" name="password2" type="password" placeholder="*******" value="<%= typeof password != 'undefined' ? password : '' %>" class="input" required />
                                                <span class="icon is-small is-left">
                                                <i class="fa fa-lock"></i>
                                            </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="field ">
                                    <div class="control">
                                        <button type="submit" class="button is-danger is-fullwidth">
                                        Register
                                    </button>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <p> Already Have An Humanity Account? <a href="/users/login">Login Here.</a>
                                        </p>
                                    </div>
                                </div>
                            </form>
                    </div>
                    <div class="column is-1"></div>
                </div>
                <!--/ Main Page -->
            </div>
        </div>
        <br><br><br><br>
    </div>
</section>